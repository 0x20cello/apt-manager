{
  "name": "part-manager",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "ng build && electron .",
    "electron:package": "ng build && electron-builder",
    "electron:package:mac": "ng build && electron-builder --mac",
    "build:ios": "ng build && npx cap sync ios",
    "sync:ios": "npx cap sync ios",
    "open:ios": "npx cap open ios",
    "build:android": "ng build && npx cap sync android",
    "sync:android": "npx cap sync android",
    "open:android": "npx cap open android",
    "apk": "ng build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "deploy": "ng deploy part-manager"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@angular/service-worker": "^19.2.18",
    "@capacitor/android": "^8.0.2",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "firebase": "^12.8.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@types/node": "^25.0.3",
    "angular-cli-ghpages": "^3.0.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "~5.6.0"
  },
  "build": {
    "appId": "com.apartmentmanager.app",
    "productName": "Apartment Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/part-manager/browser/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/icon.icns"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
